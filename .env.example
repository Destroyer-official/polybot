# ============================================================
# Polymarket Arbitrage Bot - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Keep your .env file secure and never commit it!

# ============================================================
# REQUIRED: Wallet Configuration
# ============================================================
# Your Ethereum private key (without 0x prefix is fine)
PRIVATE_KEY=your_private_key_here

# Your wallet address on Polygon
WALLET_ADDRESS=your_wallet_address_here

# ============================================================
# REQUIRED: Polygon RPC
# ============================================================
# Main RPC URL (Alchemy recommended for reliability)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Backup RPCs (comma-separated, used for failover)
BACKUP_RPC_URLS=https://polygon-rpc.com,https://rpc-mainnet.matic.network

# ============================================================
# OPTIONAL: AI/LLM API Keys
# ============================================================
# For AI-powered trade decisions (using NVIDIA API with DeepSeek v3.2)
# Get from: https://developer.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here

# ============================================================
# OPTIONAL: Cross-Platform Arbitrage
# ============================================================
# Kalshi API for cross-platform arbitrage
KALSHI_API_KEY=your_kalshi_api_key_here

# ============================================================
# TRADING PARAMETERS
# ============================================================
# Base stake amount per trade (in USDC)
STAKE_AMOUNT=5.0

# Minimum profit threshold (0.02 = 2%)
MIN_PROFIT_THRESHOLD=0.02

# Position sizing
MAX_POSITION_SIZE=5.0
MIN_POSITION_SIZE=0.5

# ============================================================
# RISK MANAGEMENT
# ============================================================
# Maximum pending transactions before pausing
MAX_PENDING_TX=5

# Maximum gas price (higher = pay more, trades faster)
MAX_GAS_PRICE_GWEI=800

# Circuit breaker: stop trading after X consecutive failures
CIRCUIT_BREAKER_THRESHOLD=10

# ============================================================
# FUND MANAGEMENT
# ============================================================
# Minimum balance to maintain (stops trading below this)
MIN_BALANCE=10.0

# Target balance for position sizing
TARGET_BALANCE=100.0

# Maximum withdrawal per transaction
WITHDRAW_LIMIT=50.0

# ============================================================
# OPERATIONAL SETTINGS
# ============================================================
# Dry run mode (true = simulate trades, false = real trading)
DRY_RUN=true

# How often to scan for opportunities (seconds)
SCAN_INTERVAL_SECONDS=5

# Health check interval (seconds)
HEARTBEAT_INTERVAL_SECONDS=60

# ============================================================
# CHAIN SETTINGS (DO NOT CHANGE)
# ============================================================
CHAIN_ID=137

# Contract addresses (Polygon Mainnet)
USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
CTF_EXCHANGE_ADDRESS=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
CONDITIONAL_TOKEN_ADDRESS=0x4D97DCd97eC945f40cF65F87097ACe5EA0476045

# ============================================================
# MONITORING (AWS CloudWatch)
# ============================================================
CLOUDWATCH_LOG_GROUP=/polymarket-arbitrage-bot
SNS_ALERT_TOPIC=
PROMETHEUS_PORT=9090
