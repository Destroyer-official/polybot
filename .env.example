# Polymarket Arbitrage Bot Environment Variables
# Copy this file to .env and fill in your values

# Required: Wallet & Keys
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Required: RPC URL
POLYGON_RPC_URL=https://polygon-rpc.com

# Optional: Backup RPC URLs (comma-separated)
BACKUP_RPC_URLS=https://rpc-mainnet.matic.network,https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: API Keys
NVIDIA_API_KEY=your_nvidia_api_key_here
KALSHI_API_KEY=your_kalshi_api_key_here

# Optional: Contract Addresses (defaults provided)
USDC_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
CTF_EXCHANGE_ADDRESS=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
CONDITIONAL_TOKEN_ADDRESS=0x4D97DCd97eC945f40cF65F87097ACe5EA0476045

# Optional: Trading Parameters
STAKE_AMOUNT=10.0
MIN_PROFIT_THRESHOLD=0.005
MAX_POSITION_SIZE=5.0
MIN_POSITION_SIZE=0.1

# Optional: Risk Management
MAX_PENDING_TX=5
MAX_GAS_PRICE_GWEI=800
CIRCUIT_BREAKER_THRESHOLD=10

# Optional: Fund Management
MIN_BALANCE=50.0
TARGET_BALANCE=100.0
WITHDRAW_LIMIT=500.0

# Optional: Monitoring
CLOUDWATCH_LOG_GROUP=/polymarket-arbitrage-bot
SNS_ALERT_TOPIC=
PROMETHEUS_PORT=9090

# Optional: Operational
DRY_RUN=false
SCAN_INTERVAL_SECONDS=2
HEARTBEAT_INTERVAL_SECONDS=60

# Optional: Chain
CHAIN_ID=137
